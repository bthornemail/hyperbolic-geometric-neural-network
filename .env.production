# H²GNN Production Environment Configuration
# Optimized for production deployment with maximum performance and security

# Application Configuration
NODE_ENV=production
APP_NAME=h2gnn-hyperbolic-geometric-neural-network
APP_VERSION=1.0.0
APP_PORT=3000
APP_HOST=0.0.0.0

# H²GNN Core Configuration
H2GNN_EMBEDDING_DIM=128
H2GNN_NUM_LAYERS=4
H2GNN_CURVATURE=-1.0
H2GNN_MAX_MEMORIES=50000
H2GNN_CONSOLIDATION_THRESHOLD=100
H2GNN_RETRIEVAL_STRATEGY=hybrid
H2GNN_COMPRESSION_ENABLED=true
H2GNN_LEARNING_RATE=0.01
H2GNN_BATCH_SIZE=64
H2GNN_MAX_EPOCHS=200

# Persistence Configuration
PERSISTENCE_PATH=/var/lib/h2gnn/persistence
PERSISTENCE_ENABLED=true
PERSISTENCE_BACKUP_INTERVAL=3600000
PERSISTENCE_CLEANUP_INTERVAL=86400000

# HD Addressing Configuration
HD_ADDRESSING_SEED=h2gnn-production-seed
HD_ADDRESSING_NETWORK=mainnet
HD_ADDRESSING_ENABLED=true
HD_ADDRESSING_DETERMINISTIC_ROUTING=true

# MCP Configuration
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_ENABLED=true
MCP_GEO_INTELLIGENCE_ENABLED=true
MCP_SEMANTIC_SEARCH_ENABLED=true

# Real-time Collaboration Configuration
COLLABORATION_MAX_PARTICIPANTS=100
COLLABORATION_PRESENCE_TIMEOUT=300000
COLLABORATION_SESSION_TIMEOUT=7200000
COLLABORATION_REAL_TIME_SYNC=true

# Visualization Configuration
VISUALIZATION_CONTAINER=#h2gnn-visualization
VISUALIZATION_WIDTH=1920
VISUALIZATION_HEIGHT=1080
VISUALIZATION_REAL_TIME_UPDATES=true
VISUALIZATION_COLLABORATION=true
VISUALIZATION_CONFIDENCE_VISUALIZATION=true

# LSP-AST Configuration
LSP_AST_ENABLED=true
LSP_AST_CODE_ANALYSIS=true
LSP_AST_REFACTORING=true
LSP_AST_INTELLIGENT_COMPLETION=true
LSP_AST_MAX_SUGGESTIONS=100
LSP_AST_ANALYSIS_TIMEOUT=10000

# Transport Configuration
TRANSPORT_MQTT_ENABLED=true
TRANSPORT_MQTT_HOST=prod-mqtt.h2gnn.com
TRANSPORT_MQTT_PORT=1883
TRANSPORT_MQTT_USERNAME=prod_user
TRANSPORT_MQTT_PASSWORD=prod_secure_password

TRANSPORT_WEBSOCKET_ENABLED=true
TRANSPORT_WEBSOCKET_HOST=prod-ws.h2gnn.com
TRANSPORT_WEBSOCKET_PORT=8080

TRANSPORT_WEBRTC_ENABLED=true
TRANSPORT_WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302,stun:stun2.l.google.com:19302
TRANSPORT_WEBRTC_TURN_SERVERS=turn:prod-turn.h2gnn.com:3478

TRANSPORT_REDIS_ENABLED=true
TRANSPORT_REDIS_HOST=prod-redis.h2gnn.com
TRANSPORT_REDIS_PORT=6379
TRANSPORT_REDIS_PASSWORD=prod_redis_secure_password
TRANSPORT_REDIS_DB=0

# Security Configuration
SECURITY_ENABLED=true
SECURITY_CORS_ORIGINS=https://h2gnn.com,https://api.h2gnn.com,https://app.h2gnn.com
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_RATE_LIMIT_MAX=1000
SECURITY_RATE_LIMIT_WINDOW=60000
SECURITY_JWT_SECRET=production_jwt_secret_key
SECURITY_ENCRYPTION_KEY=production_encryption_key

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/h2gnn/h2gnn.log
LOG_CONSOLE_ENABLED=false

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_METRICS_ENABLED=true
MONITORING_HEALTH_CHECK_ENABLED=true
MONITORING_HEALTH_CHECK_INTERVAL=60000
MONITORING_ALERTING_ENABLED=true
MONITORING_ALERTING_WEBHOOK_URL=https://alerts.h2gnn.com/webhook

# Production Configuration
PRODUCTION_OPTIMIZATION=true
PRODUCTION_CACHING_ENABLED=true
PRODUCTION_CDN_ENABLED=true
PRODUCTION_SSL_ENABLED=true
PRODUCTION_SSL_CERT_PATH=/etc/ssl/certs/h2gnn.crt
PRODUCTION_SSL_KEY_PATH=/etc/ssl/private/h2gnn.key

# Database Configuration (if using external database)
DATABASE_URL=postgresql://h2gnn:secure_password@prod-db.h2gnn.com:5432/h2gnn_prod
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30000

# External Services Configuration
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3
EXTERNAL_API_RETRY_DELAY=1000

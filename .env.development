# H²GNN Development Environment Configuration
# Optimized for local development and testing

# Application Configuration
NODE_ENV=development
APP_NAME=h2gnn-hyperbolic-geometric-neural-network
APP_VERSION=1.0.0-dev
APP_PORT=3000
APP_HOST=localhost

# H²GNN Core Configuration
H2GNN_EMBEDDING_DIM=32
H2GNN_NUM_LAYERS=2
H2GNN_CURVATURE=-1.0
H2GNN_MAX_MEMORIES=1000
H2GNN_CONSOLIDATION_THRESHOLD=10
H2GNN_RETRIEVAL_STRATEGY=simple
H2GNN_COMPRESSION_ENABLED=false
H2GNN_LEARNING_RATE=0.1
H2GNN_BATCH_SIZE=8
H2GNN_MAX_EPOCHS=10

# Persistence Configuration
PERSISTENCE_PATH=./persistence/dev
PERSISTENCE_ENABLED=true
PERSISTENCE_BACKUP_INTERVAL=1800000
PERSISTENCE_CLEANUP_INTERVAL=3600000

# HD Addressing Configuration
HD_ADDRESSING_SEED=h2gnn-development-seed
HD_ADDRESSING_NETWORK=testnet
HD_ADDRESSING_ENABLED=true
HD_ADDRESSING_DETERMINISTIC_ROUTING=true

# MCP Configuration
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=localhost
MCP_SERVER_ENABLED=true
MCP_GEO_INTELLIGENCE_ENABLED=true
MCP_SEMANTIC_SEARCH_ENABLED=true

# Real-time Collaboration Configuration
COLLABORATION_MAX_PARTICIPANTS=10
COLLABORATION_PRESENCE_TIMEOUT=60000
COLLABORATION_SESSION_TIMEOUT=1800000
COLLABORATION_REAL_TIME_SYNC=true

# Visualization Configuration
VISUALIZATION_CONTAINER=#h2gnn-visualization
VISUALIZATION_WIDTH=800
VISUALIZATION_HEIGHT=600
VISUALIZATION_REAL_TIME_UPDATES=true
VISUALIZATION_COLLABORATION=true
VISUALIZATION_CONFIDENCE_VISUALIZATION=false

# LSP-AST Configuration
LSP_AST_ENABLED=true
LSP_AST_CODE_ANALYSIS=true
LSP_AST_REFACTORING=true
LSP_AST_INTELLIGENT_COMPLETION=true
LSP_AST_MAX_SUGGESTIONS=20
LSP_AST_ANALYSIS_TIMEOUT=2000

# Transport Configuration
TRANSPORT_MQTT_ENABLED=false
TRANSPORT_MQTT_HOST=localhost
TRANSPORT_MQTT_PORT=1883

TRANSPORT_WEBSOCKET_ENABLED=true
TRANSPORT_WEBSOCKET_HOST=localhost
TRANSPORT_WEBSOCKET_PORT=8080

TRANSPORT_WEBRTC_ENABLED=false
TRANSPORT_WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302

TRANSPORT_REDIS_ENABLED=false
TRANSPORT_REDIS_HOST=localhost
TRANSPORT_REDIS_PORT=6379

# Security Configuration
SECURITY_ENABLED=false
SECURITY_CORS_ORIGINS=*
SECURITY_RATE_LIMIT_ENABLED=false

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/h2gnn-dev.log
LOG_CONSOLE_ENABLED=true

# Monitoring Configuration
MONITORING_ENABLED=false
MONITORING_METRICS_ENABLED=false
MONITORING_HEALTH_CHECK_ENABLED=true
MONITORING_HEALTH_CHECK_INTERVAL=10000

# Development Configuration
DEV_HOT_RELOAD=true
DEV_DEBUG_ENABLED=true
DEV_VERBOSE_LOGGING=true
DEV_MOCK_EXTERNAL_SERVICES=true
DEV_SKIP_AUTHENTICATION=true

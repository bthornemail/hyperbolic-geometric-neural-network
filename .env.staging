# H²GNN Staging Environment Configuration
# Optimized for staging and pre-production testing

# Application Configuration
NODE_ENV=staging
APP_NAME=h2gnn-hyperbolic-geometric-neural-network
APP_VERSION=1.0.0-staging
APP_PORT=3000
APP_HOST=0.0.0.0

# H²GNN Core Configuration
H2GNN_EMBEDDING_DIM=64
H2GNN_NUM_LAYERS=3
H2GNN_CURVATURE=-1.0
H2GNN_MAX_MEMORIES=5000
H2GNN_CONSOLIDATION_THRESHOLD=25
H2GNN_RETRIEVAL_STRATEGY=hybrid
H2GNN_COMPRESSION_ENABLED=true
H2GNN_LEARNING_RATE=0.05
H2GNN_BATCH_SIZE=16
H2GNN_MAX_EPOCHS=50

# Persistence Configuration
PERSISTENCE_PATH=./persistence/staging
PERSISTENCE_ENABLED=true
PERSISTENCE_BACKUP_INTERVAL=1800000
PERSISTENCE_CLEANUP_INTERVAL=43200000

# HD Addressing Configuration
HD_ADDRESSING_SEED=h2gnn-staging-seed
HD_ADDRESSING_NETWORK=testnet
HD_ADDRESSING_ENABLED=true
HD_ADDRESSING_DETERMINISTIC_ROUTING=true

# MCP Configuration
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_ENABLED=true
MCP_GEO_INTELLIGENCE_ENABLED=true
MCP_SEMANTIC_SEARCH_ENABLED=true

# Real-time Collaboration Configuration
COLLABORATION_MAX_PARTICIPANTS=25
COLLABORATION_PRESENCE_TIMEOUT=180000
COLLABORATION_SESSION_TIMEOUT=3600000
COLLABORATION_REAL_TIME_SYNC=true

# Visualization Configuration
VISUALIZATION_CONTAINER=#h2gnn-visualization
VISUALIZATION_WIDTH=1200
VISUALIZATION_HEIGHT=800
VISUALIZATION_REAL_TIME_UPDATES=true
VISUALIZATION_COLLABORATION=true
VISUALIZATION_CONFIDENCE_VISUALIZATION=true

# LSP-AST Configuration
LSP_AST_ENABLED=true
LSP_AST_CODE_ANALYSIS=true
LSP_AST_REFACTORING=true
LSP_AST_INTELLIGENT_COMPLETION=true
LSP_AST_MAX_SUGGESTIONS=30
LSP_AST_ANALYSIS_TIMEOUT=3000

# Transport Configuration
TRANSPORT_MQTT_ENABLED=true
TRANSPORT_MQTT_HOST=staging-mqtt.h2gnn.com
TRANSPORT_MQTT_PORT=1883
TRANSPORT_MQTT_USERNAME=staging_user
TRANSPORT_MQTT_PASSWORD=staging_password

TRANSPORT_WEBSOCKET_ENABLED=true
TRANSPORT_WEBSOCKET_HOST=staging-ws.h2gnn.com
TRANSPORT_WEBSOCKET_PORT=8080

TRANSPORT_WEBRTC_ENABLED=true
TRANSPORT_WEBRTC_STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302
TRANSPORT_WEBRTC_TURN_SERVERS=turn:staging-turn.h2gnn.com:3478

TRANSPORT_REDIS_ENABLED=true
TRANSPORT_REDIS_HOST=staging-redis.h2gnn.com
TRANSPORT_REDIS_PORT=6379
TRANSPORT_REDIS_PASSWORD=staging_redis_password
TRANSPORT_REDIS_DB=1

# Security Configuration
SECURITY_ENABLED=true
SECURITY_CORS_ORIGINS=https://staging.h2gnn.com,https://staging-api.h2gnn.com
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_RATE_LIMIT_MAX=200
SECURITY_RATE_LIMIT_WINDOW=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/h2gnn-staging.log
LOG_CONSOLE_ENABLED=true

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_METRICS_ENABLED=true
MONITORING_HEALTH_CHECK_ENABLED=true
MONITORING_HEALTH_CHECK_INTERVAL=30000

# Staging Configuration
STAGING_DATA_CLEANUP=true
STAGING_MOCK_EXTERNAL_SERVICES=false
STAGING_PERFORMANCE_TESTING=true
STAGING_LOAD_TESTING=true

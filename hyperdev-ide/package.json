{
  "name": "hyperdev-ide",
  "version": "1.0.0",
  "description": "Decentralized Agentic Programming IDE powered by H²GNN, PocketFlow, and MCP",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "start:mcp": "cd ../project && npm run mcp:server",
    "start:full": "concurrently \"npm run start:mcp\" \"npm run dev\""
  },
